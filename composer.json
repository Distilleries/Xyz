{
	"name": "Verdikt/Scolicare",
	"description": "The scolicare application.",
	"keywords": [
		"framework",
		"laravel"
	],
	"license": "MIT",
	"type": "project",
	"version": "0.1.1",
    "repositories": [
        {
            "name": "wpb/string-blade-compiler",
            "url": "https://github.com/TerrePorter/StringBladeCompiler.git",
            "type": "git"
        }
    ],
	"require": {
		"laravel/framework": "4.2.*",
		"netson/l4gettext": "1.5.*",
		"kris/laravel-form-builder": "0.*",
		"chumper/datatable": "dev-master",
		"ollieread/multiauth": "3.*",
        "wpb/string-blade-compiler": "1.*",
        "thomaswelton/laravel-gravatar": "0.1.*"
	},
	"require-dev": {
		"way/generators": "~2.0",
		"fzaninotto/faker": "1.4.*",
		"codeception/codeception": "*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
		"psr-4": {
			"Verdikt\\": "app/Verdikt"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan down",
			"npm install",
			"php artisan migrate --force",
			"gulp",
			"php artisan up"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"php artisan down",

			"php artisan up"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
    "prefer-stable": true,
	"minimum-stability": "dev"
}
